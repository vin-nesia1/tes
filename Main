        let currentPage = 1;
        let isMobile = false;
        let filteredTools = [...tools];
        let searchTimeout;

        // Check if device is mobile
        function checkIfMobile() {
            return window.innerWidth <= 767;
        }

        // Get tools per page based on device
        function getToolsPerPage() {
            return checkIfMobile() ? 10 : 9; // Mobile: 10, Desktop: 9
        }

        // Calculate total pages based on filtered tools
        function getTotalPages() {
            const toolsPerPage = getToolsPerPage();
            return Math.ceil(filteredTools.length / toolsPerPage);
        }

        // Search functionality
        function initializeSearch() {
            const searchInput = document.getElementById('searchInput');
            const clearSearch = document.getElementById('clearSearch');
            const searchSuggestions = document.getElementById('searchSuggestions');

            searchInput.addEventListener('input', (e) => {
                clearTimeout(searchTimeout);
                const query = e.target.value.trim();
                
                if (query.length > 0) {
                    clearSearch.style.display = 'block';
                    searchTimeout = setTimeout(() => {
                        performSearch(query);
                        showSearchSuggestions(query);
                    }, 300);
                } else {
                    clearSearch.style.display = 'none';
                    resetSearch();
                    hideSearchSuggestions();
                }
            });

            clearSearch.addEventListener('click', () => {
                searchInput.value = '';
                clearSearch.style.display = 'none';
                resetSearch();
                hideSearchSuggestions();
                searchInput.focus();
            });

            // Hide suggestions when clicking outside
            document.addEventListener('click', (e) => {
                if (!e.target.closest('.search-container')) {
                    hideSearchSuggestions();
                }
            });
        }

        function performSearch(query) {
            const searchTerms = query.toLowerCase().split(' ').filter(term => term.length > 0);
            
            filteredTools = tools.filter(tool => {
                const searchableText = `${tool.title} ${tool.description}`.toLowerCase();
                return searchTerms.some(term => searchableText.includes(term));
            });

            currentPage = 1;
            displayTools(currentPage);
            createPagination();
            updateSearchResults(query);
        }

        function resetSearch() {
            filteredTools = [...tools];
            currentPage = 1;
            displayTools(currentPage);
            createPagination();
            updatePageInfo(currentPage, 0, Math.min(getToolsPerPage(), filteredTools.length));
        }

        function showSearchSuggestions(query) {
            const suggestions = document.getElementById('searchSuggestions');
            const matchingTools = tools.filter(tool => 
                tool.title.toLowerCase().includes(query.toLowerCase()) ||
                tool.description.toLowerCase().includes(query.toLowerCase())
            ).slice(0, 5);

            if (matchingTools.length > 0 && query.length > 1) {
                suggestions.innerHTML = matchingTools.map(tool => `
                    <div class="suggestion-item" onclick="selectTool('${tool.title}')">
                        <div class="suggestion-icon">${tool.icon}</div>
                        <div class="suggestion-content">
                            <div class="suggestion-title">${tool.title}</div>
                            <div class="suggestion-desc">${tool.description.substring(0, 50)}...</div>
                        </div>
                    </div>
                `).join('');
                suggestions.style.display = 'block';
            } else {
                suggestions.style.display = 'none';
            }
        }

        function hideSearchSuggestions() {
            document.getElementById('searchSuggestions').style.display = 'none';
        }

        function selectTool(toolTitle) {
            document.getElementById('searchInput').value = toolTitle;
            performSearch(toolTitle);
            hideSearchSuggestions();
        }

        function updateSearchResults(query) {
            const pageInfo = document.getElementById('pageInfo');
            if (filteredTools.length === 0) {
                pageInfo.textContent = `No tools found for "${query}"`;
            } else {
                pageInfo.textContent = `Found ${filteredTools.length} tools for "${query}"`;
            }
        }

        // Generate star rating HTML
        function generateStars(rating) {
            const fullStars = Math.floor(rating);
            const hasHalfStar = rating % 1 !== 0;
            let starsHTML = '';
            
            for (let i = 0; i < fullStars; i++) {
                starsHTML += '★';
            }
            if (hasHalfStar) {
                starsHTML += '☆';
            }
            while (starsHTML.length < 5) {
                starsHTML += '☆';
            }
            
            return starsHTML;
        }

        // Enhanced Mobile menu functions
        function toggleMobileMenu() {
            const mobileNav = document.getElementById('mobileNav');
            const overlay = document.getElementById('mobileNavOverlay');
            const toggle = document.querySelector('.mobile-menu-toggle');
            
            const isActive = mobileNav.classList.contains('active');
            
            if (isActive) {
                closeMobileMenu();
            } else {
                openMobileMenu();
            }
        }

        function openMobileMenu() {
            const mobileNav = document.getElementById('mobileNav');
            const overlay = document.getElementById('mobileNavOverlay');
            const toggle = document.querySelector('.mobile-menu-toggle');
            
            mobileNav.classList.add('active');
            overlay.classList.add('active');
            toggle.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeMobileMenu() {
            const mobileNav = document.getElementById('mobileNav');
            const overlay = document.getElementById('mobileNavOverlay');
            const toggle = document.querySelector('.mobile-menu-toggle');
            
            mobileNav.classList.remove('active');
            overlay.classList.remove('active');
            toggle.classList.remove('active');
            document.body.style.overflow = '';
        }

        // Display tools for current page with enhanced animations and stats
        function displayTools(page) {
            const toolsPerPage = getToolsPerPage();
            const startIndex = (page - 1) * toolsPerPage;
            const endIndex = startIndex + toolsPerPage;
            const toolsToShow = filteredTools.slice(startIndex, endIndex);
            
            const toolsGrid = document.getElementById('toolsGrid');
            toolsGrid.innerHTML = '';
            
            if (toolsToShow.length === 0) {
                toolsGrid.innerHTML = `
                    <div style="grid-column: 1 / -1; text-align: center; padding: 60px 20px; color: #cccccc;">
                        <i class="fas fa-search" style="font-size: 3rem; margin-bottom: 20px; opacity: 0.5;"></i>
                        <h3 style="margin-bottom: 10px;">No tools found</h3>
                        <p>Try adjusting your search terms</p>
                    </div>
                `;
                return;
            }
            
            toolsToShow.forEach((tool, index) => {
                const toolCard = document.createElement('a');
                toolCard.href = tool.url;
                toolCard.className = 'tool-card';
                toolCard.target = '_blank';
                toolCard.rel = 'noopener noreferrer';
                toolCard.style.animationDelay = `${index * 0.1}s`;
                toolCard.innerHTML = `
                    <div class="tool-icon">${tool.icon}</div>
                    <h3>${tool.title}</h3>
                    <p>${tool.description}</p>
                    <div class="tool-stats">
                        <div class="tool-rating">
                            <div class="stars">${generateStars(tool.rating)}</div>
                            <div class="rating-text">${tool.rating}/5.0</div>
                        </div>
                        <div class="tool-views">
                            <div class="views-count">${tool.views} views</div>
                            <div class="users-count">${tool.users} users</div>
                        </div>
                    </div>
                `;
                toolsGrid.appendChild(toolCard);
            });
            
            updatePageInfo(page, startIndex, Math.min(endIndex, filteredTools.length));
        }

        // Update page information
        function updatePageInfo(page, start, end) {
            const pageInfo = document.getElementById('pageInfo');
            const totalPages = getTotalPages();
            const deviceType = checkIfMobile() ? 'Mobile' : 'Desktop';
            pageInfo.textContent = `Showing ${start + 1}-${end} of ${tools.length} tools (Page ${page} of ${totalPages}) - ${deviceType}`;
        }

        // Create enhanced pagination buttons
        function createPagination() {
            const pagination = document.getElementById('pagination');
            const totalPages = getTotalPages();
            pagination.innerHTML = '';
            
            if (totalPages <= 1) return; // Don't show pagination if only one page
            
            // Previous button
            const prevBtn = document.createElement('button');
            prevBtn.innerHTML = '← Previous';
            prevBtn.disabled = currentPage === 1;
            prevBtn.onclick = () => goToPage(currentPage - 1);
            pagination.appendChild(prevBtn);
            
            // Page numbers
            const maxVisiblePages = checkIfMobile() ? 3 : 5;
            let startPage = Math.max(1, currentPage - Math.floor(maxVisiblePages / 2));
            let endPage = Math.min(totalPages, startPage + maxVisiblePages - 1);
            
            if (endPage - startPage + 1 < maxVisiblePages) {
                startPage = Math.max(1, endPage - maxVisiblePages + 1);
            }
            
            // First page button
            if (startPage > 1) {
                const firstBtn = document.createElement('button');
                firstBtn.textContent = '1';
                firstBtn.onclick = () => goToPage(1);
                pagination.appendChild(firstBtn);
                
                if (startPage > 2) {
                    const dots = document.createElement('button');
                    dots.textContent = '...';
                    dots.disabled = true;
                    pagination.appendChild(dots);
                }
            }
            
            // Page number buttons
            for (let i = startPage; i <= endPage; i++) {
                const pageBtn = document.createElement('button');
                pageBtn.textContent = i;
                pageBtn.className = currentPage === i ? 'active' : '';
                pageBtn.onclick = () => goToPage(i);
                pagination.appendChild(pageBtn);
            }
            
            // Last page button
            if (endPage < totalPages) {
                if (endPage < totalPages - 1) {
                    const dots = document.createElement('button');
                    dots.textContent = '...';
                    dots.disabled = true;
                    pagination.appendChild(dots);
                }
                
                const lastBtn = document.createElement('button');
                lastBtn.textContent = totalPages;
                lastBtn.onclick = () => goToPage(totalPages);
                pagination.appendChild(lastBtn);
            }
            
            // Next button
            const nextBtn = document.createElement('button');
            nextBtn.innerHTML = 'Next →';
            nextBtn.disabled = currentPage === totalPages;
            nextBtn.onclick = () => goToPage(currentPage + 1);
            pagination.appendChild(nextBtn);
        }

        // Navigate to specific page with smooth animation
        function goToPage(page) {
            const totalPages = getTotalPages();
            if (page < 1 || page > totalPages || page === currentPage) return;
            
            currentPage = page;
            displayTools(currentPage);
            createPagination();
            
            // Smooth scroll to top of tools section
            document.querySelector('.tools-grid').scrollIntoView({ 
                behavior: 'smooth',
                block: 'start'
            });
        }

        // Initialize page
        function initializePage() {
            isMobile = checkIfMobile();
            currentPage = 1;
            displayTools(currentPage);
            createPagination();
        }

        // Handle window resize for responsive pagination
        let resizeTimeout;
        window.addEventListener('resize', () => {
            clearTimeout(resizeTimeout);
            resizeTimeout = setTimeout(() => {
                const wasInitiallyMobile = isMobile;
                isMobile = checkIfMobile();
                
                // If device type changed, reinitialize
                if (wasInitiallyMobile !== isMobile) {
                    currentPage = 1; // Reset to first page
                    initializePage();
                } else {
                    createPagination();
                }
            }, 250); // Debounce resize events
        });

        // Enhanced event listeners
        document.addEventListener('click', (e) => {
            const mobileNav = document.getElementById('mobileNav');
            const toggle = document.querySelector('.mobile-menu-toggle');
            const overlay = document.getElementById('mobileNavOverlay');
            
            // Close mobile menu when clicking outside
            if (!toggle.contains(e.target) && !mobileNav.contains(e.target) && mobileNav.classList.contains('active')) {
                closeMobileMenu();
            }
        });

        // Close mobile menu when clicking on a link
        document.querySelectorAll('.mobile-nav a').forEach(link => {
            link.addEventListener('click', () => {
                closeMobileMenu();
            });
        });

        // Keyboard navigation for pagination and mobile menu
        document.addEventListener('keydown', (e) => {
            const totalPages = getTotalPages();
            
            // Pagination keyboard shortcuts
            if (e.key === 'ArrowLeft' && currentPage > 1) {
                e.preventDefault();
                goToPage(currentPage - 1);
            } else if (e.key === 'ArrowRight' && currentPage < totalPages) {
                e.preventDefault();
                goToPage(currentPage + 1);
            }
            
            // Close mobile menu with Escape key
            if (e.key === 'Escape') {
                const mobileNav = document.getElementById('mobileNav');
                if (mobileNav.classList.contains('active')) {
                    closeMobileMenu();
                }
            }
        });

        // Touch gestures for mobile (swipe to navigate)
        let touchStartX = null;
        let touchEndX = null;

        document.addEventListener('touchstart', (e) => {
            touchStartX = e.changedTouches[0].screenX;
        });

        document.addEventListener('touchend', (e) => {
            touchEndX = e.changedTouches[0].screenX;
            handleSwipeGesture();
        });

        function handleSwipeGesture() {
            if (!touchStartX || !touchEndX) return;
            
            const swipeThreshold = 50;
            const swipeDistance = touchEndX - touchStartX;
            const totalPages = getTotalPages();
            
            if (Math.abs(swipeDistance) > swipeThreshold) {
                if (swipeDistance > 0 && currentPage > 1) {
                    // Swipe right - previous page
                    goToPage(currentPage - 1);
                } else if (swipeDistance < 0 && currentPage < totalPages) {
                    // Swipe left - next page
                    goToPage(currentPage + 1);
                }
            }
            
            touchStartX = null;
            touchEndX = null;
        }

        // Preload images for better performance
        function preloadImages() {
            const imageUrls = ['../logo.png'];
            imageUrls.forEach(url => {
                const img = new Image();
                img.src = url;
            });
        }

        // Initialize when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            initializePage();
            initializeSearch();
            initializeCounters();
            preloadImages();
            
            // Add smooth loading effect
            setTimeout(() => {
                document.body.style.opacity = '1';
            }, 100);
        });

        // Performance optimization: Lazy loading for tool cards
        if ('IntersectionObserver' in window) {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                        observer.unobserve(entry.target);
                    }
                });
            }, {
                threshold: 0.1,
                rootMargin: '50px'
            });

            // Observe tool cards when they're created
            const originalDisplayTools = displayTools;
            displayTools = function(page) {
                originalDisplayTools(page);
                document.querySelectorAll('.tool-card').forEach(card => {
                    observer.observe(card);
                });
            };
        }
    </script>
</body>
</html>
